<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="{Binding Title}"
             x:Class="AppPractica3.Views.homePage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Informacion Personal" x:Name="btninfoPer" Clicked="InformacionPersonalPage_Tapped" 
                    BackgroundColor="White" BorderColor="Gray" TextColor="Black" FontAttributes="Bold" FontSize="Small"/>

            <Button Text="Lista de Tareas Pendientes" x:Name="btnTareaPen" Clicked="TareasPendientesPage_Tapped" 
                    BackgroundColor="White" BorderColor="Gray" TextColor="Black" FontAttributes="Bold" FontSize="Small" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>